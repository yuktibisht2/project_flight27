<mvc:View controllerName="app.capgepost27.controller.DetailView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Page id="idDetail" title="Detail">
        <content>
            <f:SimpleForm id="DetForm" editable="true" layout="ResponsiveGridLayout">
           
                <Label text="{i18n>Carrid}"/>
                <Text id="carridText" text="{CustomerModel>Carrid}"/>
 
                <Label text="{i18n>Connid}"/>
                <Text id="connidText" text="{CustomerModel>Connid}"/>
 
                <Label text="{i18n>Fldate}"/>
                <Text id="fldateText" text="{CustomerModel>Fldate}" />
 
                <Label text="{i18n>Bookid}"/>
                <Text id="bookidText" text="{CustomerModel>Bookid}"/>
 
                <Label text="{i18n>OrderDate}"/>
                <Text id="orderDateText" text="{CustomerModel>OrderDate}" />
            </f:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>Edit}" press="onEdit"></Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
 